<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/hour_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical" >
            
            <TextView android:id="@+id/eventName" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/Hours"
			    style="@style/TimeDialogNamesFont"
				android:focusable="false" android:focusableInTouchMode="false"
				android:singleLine="true">
			</TextView>
			
            <Button
                android:id="@+id/hour_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/picker_top" 
                style="@style/DateTimePickerFont"
                />

            <EditText
                android:id="@+id/hour_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/picker_middle"
                android:gravity="center"
                android:inputType="number"
                android:singleLine="true" 
                style="@style/DateTimePickerFont">
            </EditText>

            <Button
                android:id="@+id/hour_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/picker_bottom" 
                style="@style/DateTimePickerFont"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/min_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView android:id="@+id/eventName" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/Minutes"
			    style="@style/TimeDialogNamesFont"
				android:focusable="false" android:focusableInTouchMode="false"
				android:singleLine="true">
			</TextView>
            <Button
                android:id="@+id/min_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/picker_top" 
                style="@style/DateTimePickerFont"/>

            <EditText
                android:id="@+id/min_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/picker_middle"
                android:gravity="center"
                android:inputType="number"
                android:singleLine="true"
                style="@style/DateTimePickerFont" />

            <Button
                android:id="@+id/min_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/picker_bottom"
                style="@style/DateTimePickerFont" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/min_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical" 
            android:visibility="gone">

            <Button
                android:id="@+id/am_pm"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_hover"
                android:text="AM" 
                style="@style/DateTimePickerFont"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>